
<div class="row">
<% @products.each do |product| %>
	<div class="col-md-3">
		<div class="thumbnail">
			<%= image_tag product.image.url(:medium) %>
			<div class="caption">
				<h3><%=product.name%></h3>
				<p>product.description</p>
				<h4>Price: <%=product.price%></h4>
				<p><%= link_to 'edit', edit_product_path(product), class: "btn btn-primary" %>
				<%= link_to 'show', product_path(product), class: "btn btn-primary" %>
				<%= link_to 'delete', root_path, method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-danger" %></p>
			</div>
		</div>
	</div>
<%end%>
</div>
= link_to 'Create', new_product_path
%h1 Product Listing
-@products.each do |product|
  %div
    %h3= product.name
    %ul
      %li= product.price
      %li= product.description
    = link_to 'Edit', edit_product_path(product)
    = link_to 'Show', product_path(product)
    = link_to 'Delete', product_path(product), method: :delete 